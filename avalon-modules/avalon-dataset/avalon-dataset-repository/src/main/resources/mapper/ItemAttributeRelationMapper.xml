<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.dataset.mapper.ItemAttributeRelationMapper">
  <resultMap id="itemAttributeRelationResultMap" type="io.github.lishangbu.avalon.dataset.entity.ItemAttributeRelation">
    <!--@Table item_attribute_relation-->
    <id column="id" property="id"/>
    <result column="item_id" property="itemId"/>
    <result column="item_attribute_id" property="itemAttributeId"/>
  </resultMap>

  <sql id="itemAttributeRelationColumnList">
    id,
    item_id,
    item_attribute_id
  </sql>

  <!--通过id查询单条道具属性关系数据-->
  <select id="selectById" resultMap="itemAttributeRelationResultMap">
    select
    <include refid="itemAttributeRelationColumnList"/>
    from item_attribute_relation
    where id = #{id}
  </select>

  <!--新增道具属性关系-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into item_attribute_relation
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="itemId != null">
        item_id,
      </if>
      <if test="itemAttributeId != null">
        item_attribute_id,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="itemId != null">
        #{itemId},
      </if>
      <if test="itemAttributeId != null">
        #{itemAttributeId},
      </if>
    </trim>
  </insert>

  <!--通过id修改道具属性关系-->
  <update id="updateById">
    update item_attribute_relation
    <set>
      <if test="itemId != null">
        item_id = #{itemId},
      </if>
      <if test="itemAttributeId != null">
        item_attribute_id = #{itemAttributeId},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--通过id删除道具属性关系-->
  <delete id="deleteById">
    delete from item_attribute_relation where id = #{id}
  </delete>
</mapper>

