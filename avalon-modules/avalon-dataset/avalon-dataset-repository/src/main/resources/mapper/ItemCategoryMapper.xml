<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.dataset.mapper.ItemCategoryMapper">
  <resultMap id="itemCategoryResultMap" type="io.github.lishangbu.avalon.dataset.entity.ItemCategory">
    <!--@Table item_category-->
    <id column="id" property="id"/>
    <result column="internal_name" property="internalName"/>
    <result column="name" property="name"/>
    <result column="item_pocket_internal_name" property="itemPocketInternalName"/>
  </resultMap>

  <sql id="itemCategoryColumnList">
    id,
    internal_name,
    name,
    item_pocket_internal_name
  </sql>

  <!--通过id查询单条道具类别数据-->
  <select id="selectById" resultMap="itemCategoryResultMap">
    select
    <include refid="itemCategoryColumnList"/>
    from item_category
    where id = #{id}
  </select>

  <!--新增道具类别-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into item_category
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="internalName != null and internalName != ''">
        internal_name,
      </if>
      <if test="name != null and name != ''">
        name,
      </if>
      <if test="itemPocketInternalName != null and itemPocketInternalName != ''">
        item_pocket_internal_name,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="internalName != null and internalName != ''">
        #{internalName},
      </if>
      <if test="name != null and name != ''">
        #{name},
      </if>
      <if test="itemPocketInternalName != null and itemPocketInternalName != ''">
        #{itemPocketInternalName},
      </if>
    </trim>
  </insert>

  <!--通过id修改道具类别-->
  <update id="updateById">
    update item_category
    <set>
      <if test="internalName != null and internalName != ''">
        internal_name = #{internalName},
      </if>
      <if test="name != null and name != ''">
        name = #{name},
      </if>
      <if test="itemPocketInternalName != null and itemPocketInternalName != ''">
        item_pocket_internal_name = #{itemPocketInternalName},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--通过id删除道具类别-->
  <delete id="deleteById">
    delete from item_category where id = #{id}
  </delete>
</mapper>

