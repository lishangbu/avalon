<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.dataset.mapper.EggGroupMapper">
  <resultMap id="eggGroupResultMap" type="io.github.lishangbu.avalon.dataset.entity.EggGroup">
    <!--@Table egg_group-->
    <id column="id" property="id"/>
    <result column="internal_name" property="internalName"/>
    <result column="name" property="name"/>
    <result column="text" property="text"/>
    <result column="characteristics" property="characteristics"/>
  </resultMap>

  <sql id="eggGroupColumnList">
    id,
    internal_name,
    name,
    text,
    characteristics
  </sql>

  <!--通过id查询单条蛋组数据-->
  <select id="selectById" resultMap="eggGroupResultMap">
    select
    <include refid="eggGroupColumnList"/>
    from egg_group
    where id = #{id}
  </select>

  <!--新增蛋组-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into egg_group
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="internalName != null and internalName != ''">
        internal_name,
      </if>
      <if test="name != null and name != ''">
        name,
      </if>
      <if test="text != null and text != ''">
        text,
      </if>
      <if test="characteristics != null and characteristics != ''">
        characteristics,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="internalName != null and internalName != ''">
        #{internalName},
      </if>
      <if test="name != null and name != ''">
        #{name},
      </if>
      <if test="text != null and text != ''">
        #{text},
      </if>
      <if test="characteristics != null and characteristics != ''">
        #{characteristics},
      </if>
    </trim>
  </insert>

  <!--通过id修改蛋组-->
  <update id="updateById">
    update egg_group
    <set>
      <if test="internalName != null and internalName != ''">
        internal_name = #{internalName},
      </if>
      <if test="name != null and name != ''">
        name = #{name},
      </if>
      <if test="text != null and text != ''">
        text = #{text},
      </if>
      <if test="characteristics != null and characteristics != ''">
        characteristics = #{characteristics},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--通过id删除蛋组-->
  <delete id="deleteById">
    delete from egg_group where id = #{id}
  </delete>
</mapper>

