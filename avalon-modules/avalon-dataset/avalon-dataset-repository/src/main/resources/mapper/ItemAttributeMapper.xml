<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.dataset.mapper.ItemAttributeMapper">
  <resultMap id="itemAttributeResultMap" type="io.github.lishangbu.avalon.dataset.entity.ItemAttribute">
    <!--@Table item_attribute-->
    <id column="id" property="id"/>
    <result column="internal_name" property="internalName"/>
    <result column="name" property="name"/>
    <result column="description" property="description"/>
  </resultMap>

  <sql id="itemAttributeColumnList">
    id,
    internal_name,
    name,
    description
  </sql>

  <!--通过id查询单条道具属性数据-->
  <select id="selectById" resultMap="itemAttributeResultMap">
    select
    <include refid="itemAttributeColumnList"/>
    from item_attribute
    where id = #{id}
  </select>

  <!--新增道具属性-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into item_attribute
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="internalName != null and internalName != ''">
        internal_name,
      </if>
      <if test="name != null and name != ''">
        name,
      </if>
      <if test="description != null and description != ''">
        description,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="internalName != null and internalName != ''">
        #{internalName},
      </if>
      <if test="name != null and name != ''">
        #{name},
      </if>
      <if test="description != null and description != ''">
        #{description},
      </if>
    </trim>
  </insert>

  <!--通过id修改道具属性-->
  <update id="updateById">
    update item_attribute
    <set>
      <if test="internalName != null and internalName != ''">
        internal_name = #{internalName},
      </if>
      <if test="name != null and name != ''">
        name = #{name},
      </if>
      <if test="description != null and description != ''">
        description = #{description},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--通过id删除道具属性-->
  <delete id="deleteById">
    delete from item_attribute where id = #{id}
  </delete>
</mapper>

