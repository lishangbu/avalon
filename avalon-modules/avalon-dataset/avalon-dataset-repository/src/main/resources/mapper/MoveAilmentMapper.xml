<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.dataset.mapper.MoveAilmentMapper">
  <resultMap id="moveAilmentResultMap" type="io.github.lishangbu.avalon.dataset.entity.MoveAilment">
    <!--@Table move_ailment-->
    <id column="id" property="id"/>
    <result column="internal_name" property="internalName"/>
    <result column="name" property="name"/>
  </resultMap>

  <sql id="moveAilmentColumnList">
    id,
    internal_name,
    name
  </sql>

  <!--通过id查询单条招式导致的状态异常数据-->
  <select id="selectById" resultMap="moveAilmentResultMap">
    select
    <include refid="moveAilmentColumnList"/>
    from move_ailment
    where id = #{id}
  </select>

  <!--新增招式导致的状态异常-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into move_ailment
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="internalName != null and internalName != ''">
        internal_name,
      </if>
      <if test="name != null and name != ''">
        name,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="internalName != null and internalName != ''">
        #{internalName},
      </if>
      <if test="name != null and name != ''">
        #{name},
      </if>
    </trim>
  </insert>

  <!--通过id修改招式导致的状态异常-->
  <update id="updateById">
    update move_ailment
    <set>
      <if test="internalName != null and internalName != ''">
        internal_name = #{internalName},
      </if>
      <if test="name != null and name != ''">
        name = #{name},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--通过id删除招式导致的状态异常-->
  <delete id="deleteById">
    delete from move_ailment where id = #{id}
  </delete>
</mapper>

