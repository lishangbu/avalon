<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.authorization.mapper.ProfileMapper">
  <resultMap id="profileResultMap" type="io.github.lishangbu.avalon.authorization.entity.Profile">
    <!--@Table profile-->
    <id column="id" property="id"/>
    <result column="gender" property="gender"/>
    <result column="avatar" property="avatar"/>
    <result column="address" property="address"/>
    <result column="email" property="email"/>
    <result column="user_id" property="userId"/>
    <result column="nickname" property="nickname"/>
  </resultMap>

  <sql id="profileColumnList">
    id,gender,avatar,address,email,user_id,nickname
  </sql>

  <!--通过id查询单条用户个人资料表数据-->
  <select id="selectById" resultMap="profileResultMap">
    select
    <include refid="profileColumnList"/>
    from profile
    where id = #{id}
  </select>

  <!--新增用户个人资料表-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into profile
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="gender != null">
        gender,
      </if>
      <if test="avatar != null and avatar != ''">
        avatar,
      </if>
      <if test="address != null and address != ''">
        address,
      </if>
      <if test="email != null and email != ''">
        email,
      </if>
      <if test="userId != null">
        user_id,
      </if>
      <if test="nickname != null and nickname != ''">
        nickname,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="gender != null">
        #{gender},
      </if>
      <if test="avatar != null and avatar != ''">
        #{avatar},
      </if>
      <if test="address != null and address != ''">
        #{address},
      </if>
      <if test="email != null and email != ''">
        #{email},
      </if>
      <if test="userId != null">
        #{userId},
      </if>
      <if test="nickname != null and nickname != ''">
        #{nickname},
      </if>
    </trim>
  </insert>

  <!--通过id修改用户个人资料表-->
  <update id="updateById">
    update profile
    <set>
      <if test="gender != null">
        gender = #{gender},
      </if>
      <if test="avatar != null and avatar != ''">
        avatar = #{avatar},
      </if>
      <if test="address != null and address != ''">
        address = #{address},
      </if>
      <if test="email != null and email != ''">
        email = #{email},
      </if>
      <if test="userId != null">
        user_id = #{userId},
      </if>
      <if test="nickname != null and nickname != ''">
        nickname = #{nickname},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--通过id删除用户个人资料表-->
  <delete id="deleteById">
    delete
    from profile
    where id = #{id}
  </delete>
</mapper>

