<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.dataset.mapper.AbilityMapper">
  <resultMap id="abilityResultMap" type="io.github.lishangbu.avalon.dataset.entity.Ability">
    <!--@Table ability-->
    <id column="id" property="id"/>
    <result column="internal_name" property="internalName"/>
    <result column="name" property="name"/>
    <result column="effect" property="effect"/>
    <result column="info" property="info"/>
    <result column="text" property="text"/>
  </resultMap>

  <sql id="abilityColumnList">
    id,
    internal_name,
    name,
    effect,
    info,
    text
  </sql>

  <!--通过id查询单条特性数据-->
  <select id="selectById" resultMap="abilityResultMap">
    select
    <include refid="abilityColumnList"/>
    from ability
    where id = #{id}
  </select>

  <!--新增特性-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into ability
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="internalName != null and internalName != ''">
        internal_name,
      </if>
      <if test="name != null and name != ''">
        name,
      </if>
      <if test="effect != null and effect != ''">
        effect,
      </if>
      <if test="info != null and info != ''">
        info,
      </if>
      <if test="text != null and text != ''">
        text,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="internalName != null and internalName != ''">
        #{internalName},
      </if>
      <if test="name != null and name != ''">
        #{name},
      </if>
      <if test="effect != null and effect != ''">
        #{effect},
      </if>
      <if test="info != null and info != ''">
        #{info},
      </if>
      <if test="text != null and text != ''">
        #{text},
      </if>
    </trim>
  </insert>

  <!--通过id修改特性-->
  <update id="updateById">
    update ability
    <set>
      <if test="internalName != null and internalName != ''">
        internal_name = #{internalName},
      </if>
      <if test="name != null and name != ''">
        name = #{name},
      </if>
      <if test="effect != null and effect != ''">
        effect = #{effect},
      </if>
      <if test="info != null and info != ''">
        info = #{info},
      </if>
      <if test="text != null and text != ''">
        text = #{text},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--通过id删除特性-->
  <delete id="deleteById">
    delete from ability where id = #{id}
  </delete>
</mapper>

