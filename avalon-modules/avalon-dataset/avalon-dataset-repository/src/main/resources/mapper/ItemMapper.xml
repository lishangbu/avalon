<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.dataset.mapper.ItemMapper">
  <resultMap id="itemResultMap" type="io.github.lishangbu.avalon.dataset.entity.Item">
    <!--@Table item-->
    <id column="id" property="id"/>
    <result column="internal_name" property="internalName"/>
    <result column="name" property="name"/>
    <result column="cost" property="cost"/>
    <result column="fling_power" property="flingPower"/>
    <result column="fling_effect_internal_name" property="flingEffectInternalName"/>
    <result column="category_internal_name" property="categoryInternalName"/>
    <result column="short_effect" property="shortEffect"/>
    <result column="effect" property="effect"/>
    <result column="text" property="text"/>
  </resultMap>

  <sql id="itemColumnList">
    id,
    internal_name,
    name,
    cost,
    fling_power,
    fling_effect_internal_name,
    category_internal_name,
    short_effect,

    effect,
    text
  </sql>

  <!--通过id查询单条道具数据-->
  <select id="selectById" resultMap="itemResultMap">
    select
    <include refid="itemColumnList"/>
    from item
    where id = #{id}
  </select>

  <!--新增道具-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into item
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="internalName != null and internalName != ''">
        internal_name,
      </if>
      <if test="name != null and name != ''">
        name,
      </if>
      <if test="cost != null">
        cost,
      </if>
      <if test="flingPower != null">
        fling_power,
      </if>
      <if test="flingEffectInternalName != null and flingEffectInternalName != ''">
        fling_effect_internal_name,
      </if>
      <if test="categoryInternalName != null and categoryInternalName != ''">
        category_internal_name,
      </if>
      <if test="shortEffect != null and shortEffect != ''">
        short_effect,
      </if>
      <if test="effect != null and effect != ''">
        effect,
      </if>
      <if test="text != null and text != ''">
        text,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="internalName != null and internalName != ''">
        #{internalName},
      </if>
      <if test="name != null and name != ''">
        #{name},
      </if>
      <if test="cost != null">
        #{cost},
      </if>
      <if test="flingPower != null">
        #{flingPower},
      </if>
      <if test="flingEffectInternalName != null and flingEffectInternalName != ''">
        #{flingEffectInternalName},
      </if>
      <if test="categoryInternalName != null and categoryInternalName != ''">
        #{categoryInternalName},
      </if>
      <if test="shortEffect != null and shortEffect != ''">
        #{shortEffect},
      </if>
      <if test="effect != null and effect != ''">
        #{effect},
      </if>
      <if test="text != null and text != ''">
        #{text},
      </if>
    </trim>
  </insert>

  <!--通过id修改道具-->
  <update id="updateById">
    update item
    <set>
      <if test="internalName != null and internalName != ''">
        internal_name = #{internalName},
      </if>
      <if test="name != null and name != ''">
        name = #{name},
      </if>
      <if test="cost != null">
        cost = #{cost},
      </if>
      <if test="flingPower != null">
        fling_power = #{flingPower},
      </if>
      <if test="flingEffectInternalName != null and flingEffectInternalName != ''">
        fling_effect_internal_name = #{flingEffectInternalName},
      </if>
      <if test="categoryInternalName != null and categoryInternalName != ''">
        category_internal_name = #{categoryInternalName},
      </if>
      <if test="shortEffect != null and shortEffect != ''">
        short_effect = #{shortEffect},
      </if>
      <if test="effect != null and effect != ''">
        effect = #{effect},
      </if>
      <if test="text != null and text != ''">
        text = #{text},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--通过id删除道具-->
  <delete id="deleteById">
    delete from item where id = #{id}
  </delete>
</mapper>

