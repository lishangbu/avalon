<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <!-- 日志级别 -->
    <springProperty scope="context" name="loggingLevelRoot" source="logging.level.root" defaultValue="INFO"/>
    <!-- 应用名称 -->
    <springProperty scope="context" name="springApplicationName" source="spring.application.name"/>
    <!-- 应用配置激活 -->
    <springProperty scope="context" name="springProfilesActive" source="spring.profiles.active"/>
    <!-- 控制台日志 -->
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!-- 减少部分日志 -->
    <logger name="org.mybatis" level="ERROR"/>
    <logger name="org.springframework.beans" level="WARN"/>
    <logger name="org.springframework.context" level="WARN"/>
    <logger name="com.zaxxer.hikari.pool" level="WARN"/>

    <root level="${loggingLevelRoot}">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
