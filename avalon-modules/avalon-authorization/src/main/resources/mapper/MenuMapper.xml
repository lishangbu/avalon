<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.authorization.mapper.MenuMapper">
  <resultMap id="MenuResultMap" type="io.github.lishangbu.avalon.authorization.entity.Menu">
    <id column="id" property="id" />
    <result column="parent_id" property="parentId" />
    <result column="disabled" property="disabled" />
    <result column="extra" property="extra" />
    <result column="icon" property="icon" />
    <result column="key" property="key" />
    <result column="label" property="label" />
    <result column="show" property="show" />
    <result column="path" property="path" />
    <result column="name" property="name" />
    <result column="redirect" property="redirect" />
    <result column="component" property="component" />
    <result column="sort_order" property="sortOrder" />
    <result column="pinned" property="pinned" />
    <result column="show_tab" property="showTab" />
    <result column="enable_multi_tab" property="enableMultiTab" />
  </resultMap>

  <select id="selectByRoleCodes" resultMap="MenuResultMap" parameterType="list">
    SELECT distinct m.* FROM menu m
    LEFT JOIN role_menu_relation rmr ON m.id = rmr.menu_id
    LEFT JOIN role r ON rmr.role_id = r.id
    WHERE r.code IN
    <foreach collection="roleCodes" item="code" open="(" separator="," close=")">
      #{code}
    </foreach>
    ORDER BY m.sort_order DESC
  </select>
</mapper>
