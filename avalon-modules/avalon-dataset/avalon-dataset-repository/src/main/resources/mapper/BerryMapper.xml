<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.dataset.mapper.BerryMapper">
  <resultMap id="berryResultMap" type="io.github.lishangbu.avalon.dataset.entity.Berry">
    <!--@Table berry-->
    <id column="id" property="id"/>
    <result column="internal_name" property="internalName"/>
    <result column="name" property="name"/>
    <result column="growth_time" property="growthTime"/>
    <result column="max_harvest" property="maxHarvest"/>
    <result column="size" property="size"/>
    <result column="smoothness" property="smoothness"/>
    <result column="soil_dryness" property="soilDryness"/>
    <result column="firmness_internal_name" property="firmnessInternalName"/>
    <result column="natural_gift_type_internal_name" property="naturalGiftTypeInternalName"/>
    <result column="natural_gift_power" property="naturalGiftPower"/>
  </resultMap>

  <sql id="berryColumnList">
    id,
    internal_name,
    name,
    growth_time,
    max_harvest,
    size,
    smoothness,
    soil_dryness,

    firmness_internal_name,
    natural_gift_type_internal_name,
    natural_gift_power
  </sql>

  <!--通过id查询单条树果数据-->
  <select id="selectById" resultMap="berryResultMap">
    select
    <include refid="berryColumnList"/>
    from berry
    where id = #{id}
  </select>

  <!--新增树果-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into berry
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="internalName != null and internalName != ''">
        internal_name,
      </if>
      <if test="name != null and name != ''">
        name,
      </if>
      <if test="growthTime != null">
        growth_time,
      </if>
      <if test="maxHarvest != null">
        max_harvest,
      </if>
      <if test="size != null">
        size,
      </if>
      <if test="smoothness != null">
        smoothness,
      </if>
      <if test="soilDryness != null">
        soil_dryness,
      </if>
      <if test="firmnessInternalName != null and firmnessInternalName != ''">
        firmness_internal_name,
      </if>
      <if test="naturalGiftTypeInternalName != null and naturalGiftTypeInternalName != ''">
        natural_gift_type_internal_name,
      </if>
      <if test="naturalGiftPower != null">
        natural_gift_power,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="internalName != null and internalName != ''">
        #{internalName},
      </if>
      <if test="name != null and name != ''">
        #{name},
      </if>
      <if test="growthTime != null">
        #{growthTime},
      </if>
      <if test="maxHarvest != null">
        #{maxHarvest},
      </if>
      <if test="size != null">
        #{size},
      </if>
      <if test="smoothness != null">
        #{smoothness},
      </if>
      <if test="soilDryness != null">
        #{soilDryness},
      </if>
      <if test="firmnessInternalName != null and firmnessInternalName != ''">
        #{firmnessInternalName},
      </if>
      <if test="naturalGiftTypeInternalName != null and naturalGiftTypeInternalName != ''">
        #{naturalGiftTypeInternalName},
      </if>
      <if test="naturalGiftPower != null">
        #{naturalGiftPower},
      </if>
    </trim>
  </insert>

  <!--通过id修改树果-->
  <update id="updateById">
    update berry
    <set>
      <if test="internalName != null and internalName != ''">
        internal_name = #{internalName},
      </if>
      <if test="name != null and name != ''">
        name = #{name},
      </if>
      <if test="growthTime != null">
        growth_time = #{growthTime},
      </if>
      <if test="maxHarvest != null">
        max_harvest = #{maxHarvest},
      </if>
      <if test="size != null">
        size = #{size},
      </if>
      <if test="smoothness != null">
        smoothness = #{smoothness},
      </if>
      <if test="soilDryness != null">
        soil_dryness = #{soilDryness},
      </if>
      <if test="firmnessInternalName != null and firmnessInternalName != ''">
        firmness_internal_name = #{firmnessInternalName},
      </if>
      <if test="naturalGiftTypeInternalName != null and naturalGiftTypeInternalName != ''">
        natural_gift_type_internal_name = #{naturalGiftTypeInternalName},
      </if>
      <if test="naturalGiftPower != null">
        natural_gift_power = #{naturalGiftPower},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--通过id删除树果-->
  <delete id="deleteById">
    delete from berry where id = #{id}
  </delete>
</mapper>

