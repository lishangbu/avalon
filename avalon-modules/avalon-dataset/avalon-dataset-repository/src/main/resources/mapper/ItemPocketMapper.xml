<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.dataset.mapper.ItemPocketMapper">
  <resultMap id="itemPocketResultMap" type="io.github.lishangbu.avalon.dataset.entity.ItemPocket">
    <!--@Table item_pocket-->
    <id column="id" property="id"/>
    <result column="internal_name" property="internalName"/>
    <result column="name" property="name"/>
  </resultMap>

  <sql id="itemPocketColumnList">
    id,
    internal_name,
    name
  </sql>

  <!--通过id查询单条道具口袋数据-->
  <select id="selectById" resultMap="itemPocketResultMap">
    select
    <include refid="itemPocketColumnList"/>
    from item_pocket
    where id = #{id}
  </select>

  <!--新增道具口袋-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into item_pocket
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="internalName != null and internalName != ''">
        internal_name,
      </if>
      <if test="name != null and name != ''">
        name,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="internalName != null and internalName != ''">
        #{internalName},
      </if>
      <if test="name != null and name != ''">
        #{name},
      </if>
    </trim>
  </insert>

  <!--通过id修改道具口袋-->
  <update id="updateById">
    update item_pocket
    <set>
      <if test="internalName != null and internalName != ''">
        internal_name = #{internalName},
      </if>
      <if test="name != null and name != ''">
        name = #{name},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--通过id删除道具口袋-->
  <delete id="deleteById">
    delete from item_pocket where id = #{id}
  </delete>
</mapper>

