<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.authorization.mapper.RoleMapper">
  <resultMap id="roleResultMap" type="io.github.lishangbu.avalon.authorization.entity.Role">
    <!--@Table role-->
    <id column="id" property="id"/>
    <result column="code" property="code"/>
  </resultMap>

  <sql id="roleColumnList">
    id,
    code,
    name,
    enabled
  </sql>

  <!--通过id查询单条角色信息数据-->
  <select id="selectById" resultMap="roleResultMap">
    select
    <include refid="roleColumnList"/>
    from role
    where id = #{id}
  </select>

  <!--新增角色信息-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into role
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="code != null and code != ''">
        code,
      </if>
      <if test="name != null and name != ''">
        name,
      </if>
      <if test="enabled != null">
        enabled,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="code != null and code != ''">
        #{code},
      </if>
      <if test="name != null and name != ''">
        #{name},
      </if>
      <if test="enabled != null">
        #{enabled},
      </if>
    </trim>
  </insert>

  <!--通过id修改角色信息-->
  <update id="updateById">
    update role
    <set>
      <if test="code != null and code != ''">
        code = #{code},
      </if>
      <if test="name != null and name != ''">
        name=#{name},
      </if>
      <if test="enabled != null">
        enabled=#{enabled},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--通过id删除角色信息-->
  <delete id="deleteById">
    delete
    from role
    where id = #{id}
  </delete>

  <select id="selectAll" resultMap="roleResultMap">
    SELECT
    <include refid="roleColumnList"/>
    FROM
    role
    <where>
      <if test="code != null and code != ''">
        and code = #{code}
      </if>
      <if test="name != null and name != ''">
        and name=#{name}
      </if>
      <if test="enabled != null">
        and enabled=#{enabled}
      </if>
    </where>
  </select>
</mapper>

