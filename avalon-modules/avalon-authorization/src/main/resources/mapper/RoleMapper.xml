<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.authorization.mapper.RoleMapper">
  <resultMap id="roleResultMap" type="io.github.lishangbu.avalon.authorization.entity.Role">
    <!--@Table role-->
    <id column="id" property="id"/>
    <result column="code" property="code"/>
  </resultMap>

  <sql id="roleColumnList">
    id,
    code
  </sql>

  <!--通过id查询单条角色信息数据-->
  <select id="selectById" resultMap="roleResultMap">
    select
    <include refid="roleColumnList"/>
    from role
    where id = #{id}
  </select>

  <!--统计角色信息总行数-->
  <select id="count" resultType="java.lang.Long">
    select count(1)
    from role
    <where>
      <if test="id != null">
        and id = #{id}
      </if>
      <if test="code != null and code != ''">
        and code = #{code}
      </if>
    </where>
  </select>

  <!--新增角色信息-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into role
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="code != null and code != ''">
        code,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="code != null and code != ''">
        #{code},
      </if>
    </trim>
  </insert>

  <!--通过id修改角色信息-->
  <update id="updateById">
    update role
    <set>
      <if test="code != null and code != ''">
        code = #{code},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--通过id删除角色信息-->
  <delete id="deleteById">
    delete from role where id = #{id}
  </delete>
</mapper>

