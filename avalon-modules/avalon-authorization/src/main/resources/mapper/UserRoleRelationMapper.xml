<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.authorization.mapper.UserRoleRelationMapper">

  <insert id="insert" parameterType="io.github.lishangbu.avalon.authorization.entity.UserRoleRelation">
    INSERT INTO user_role_relation (user_id, role_id)
    VALUES (#{userId}, #{roleId})
  </insert>

  <delete id="deleteByUserIdAndRoleId" parameterType="map">
    DELETE FROM user_role_relation
    WHERE user_id = #{userId} AND role_id = #{roleId}
  </delete>

  <delete id="deleteByUserId" parameterType="map">
    DELETE FROM user_role_relation
    WHERE user_id = #{userId}
  </delete>

  <delete id="deleteByRoleId" parameterType="map">
    DELETE FROM user_role_relation
    WHERE role_id = #{roleId}
  </delete>

</mapper>

