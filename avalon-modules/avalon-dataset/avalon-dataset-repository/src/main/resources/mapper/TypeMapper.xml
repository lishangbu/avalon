<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.dataset.mapper.TypeMapper">
  <resultMap id="typeResultMap" type="io.github.lishangbu.avalon.dataset.entity.Type">
    <!--@Table type-->
    <id column="id" property="id"/>
    <result column="internal_name" property="internalName"/>
    <result column="name" property="name"/>
  </resultMap>

  <sql id="typeColumnList">
    id,
    internal_name,
    name
  </sql>

  <!--通过id查询单条属性数据-->
  <select id="selectById" resultMap="typeResultMap">
    select
    <include refid="typeColumnList"/>
    from type
    where id = #{id}
  </select>

  <!--新增属性-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into type
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="internalName != null and internalName != ''">
        internal_name,
      </if>
      <if test="name != null and name != ''">
        name,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="internalName != null and internalName != ''">
        #{internalName},
      </if>
      <if test="name != null and name != ''">
        #{name},
      </if>
    </trim>
  </insert>

  <!--通过id修改属性-->
  <update id="updateById">
    update type
    <set>
      <if test="internalName != null and internalName != ''">
        internal_name = #{internalName},
      </if>
      <if test="name != null and name != ''">
        name = #{name},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--通过id删除属性-->
  <delete id="deleteById">
    delete from type where id = #{id}
  </delete>

  <!--根据条件查询符合条件的数据-->
  <select id="selectAll" resultMap="typeResultMap">
    select
    <include refid="typeColumnList"/>
    from type
    <where>
      <if test="id != null">
        and id = #{id}
      </if>
      <if test="internalName != null and internalName != ''">
        and internal_name = #{internalName}
      </if>
      <if test="name != null and name != ''">
        and name = #{name}
      </if>
    </where>
  </select>
</mapper>

