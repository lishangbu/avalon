<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.dataset.mapper.ItemFlingEffectMapper">
  <resultMap id="itemFlingEffectResultMap" type="io.github.lishangbu.avalon.dataset.entity.ItemFlingEffect">
    <!--@Table item_fling_effect-->
    <id column="id" property="id"/>
    <result column="internal_name" property="internalName"/>
    <result column="name" property="name"/>
    <result column="effect" property="effect"/>
  </resultMap>

  <sql id="itemFlingEffectColumnList">
    id,
    internal_name,
    name,
    effect
  </sql>

  <!--通过id查询单条道具"投掷"效果数据-->
  <select id="selectById" resultMap="itemFlingEffectResultMap">
    select
    <include refid="itemFlingEffectColumnList"/>
    from item_fling_effect
    where id = #{id}
  </select>

  <!--新增道具"投掷"效果-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into item_fling_effect
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="internalName != null and internalName != ''">
        internal_name,
      </if>
      <if test="name != null and name != ''">
        name,
      </if>
      <if test="effect != null and effect != ''">
        effect,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="internalName != null and internalName != ''">
        #{internalName},
      </if>
      <if test="name != null and name != ''">
        #{name},
      </if>
      <if test="effect != null and effect != ''">
        #{effect},
      </if>
    </trim>
  </insert>

  <!--通过id修改道具"投掷"效果-->
  <update id="updateById">
    update item_fling_effect
    <set>
      <if test="internalName != null and internalName != ''">
        internal_name = #{internalName},
      </if>
      <if test="name != null and name != ''">
        name = #{name},
      </if>
      <if test="effect != null and effect != ''">
        effect = #{effect},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--通过id删除道具"投掷"效果-->
  <delete id="deleteById">
    delete from item_fling_effect where id = #{id}
  </delete>
</mapper>

