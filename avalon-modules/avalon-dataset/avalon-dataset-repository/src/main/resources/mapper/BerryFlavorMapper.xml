<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.dataset.mapper.BerryFlavorMapper">
  <resultMap id="berryFlavorResultMap" type="io.github.lishangbu.avalon.dataset.entity.BerryFlavor">
    <!--@Table berry_flavor-->
    <id column="id" property="id"/>
    <result column="internal_name" property="internalName"/>
    <result column="name" property="name"/>
  </resultMap>

  <sql id="berryFlavorColumnList">
    id,
    internal_name,
    name
  </sql>

  <!--通过id查询单条树果风味数据-->
  <select id="selectById" resultMap="berryFlavorResultMap">
    select
    <include refid="berryFlavorColumnList"/>
    from berry_flavor
    where id = #{id}
  </select>

  <!--新增树果风味-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into berry_flavor
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="internalName != null and internalName != ''">
        internal_name,
      </if>
      <if test="name != null and name != ''">
        name,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="internalName != null and internalName != ''">
        #{internalName},
      </if>
      <if test="name != null and name != ''">
        #{name},
      </if>
    </trim>
  </insert>

  <!--通过id修改树果风味-->
  <update id="updateById">
    update berry_flavor
    <set>
      <if test="internalName != null and internalName != ''">
        internal_name = #{internalName},
      </if>
      <if test="name != null and name != ''">
        name = #{name},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--通过id删除树果风味-->
  <delete id="deleteById">
    delete from berry_flavor where id = #{id}
  </delete>
</mapper>

