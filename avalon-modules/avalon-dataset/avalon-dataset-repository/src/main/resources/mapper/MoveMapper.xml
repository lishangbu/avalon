<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.lishangbu.avalon.dataset.mapper.MoveMapper">
  <resultMap id="moveResultMap" type="io.github.lishangbu.avalon.dataset.entity.Move">
    <!--@Table move-->
    <id column="id" property="id"/>
    <result column="internal_name" property="internalName"/>
    <result column="name" property="name"/>
    <result column="type_internal_name" property="typeInternalName"/>
    <result column="accuracy" property="accuracy"/>
    <result column="effect_chance" property="effectChance"/>
    <result column="pp" property="pp"/>
    <result column="priority" property="priority"/>
    <result column="power" property="power"/>
    <result column="damage_class_internal_name" property="damageClassInternalName"/>
    <result column="target_internal_name" property="targetInternalName"/>
    <result column="text" property="text"/>
    <result column="short_effect" property="shortEffect"/>
    <result column="effect" property="effect"/>
    <result column="min_hits" property="minHits"/>
    <result column="max_turns" property="maxTurns"/>
    <result column="drain" property="drain"/>
    <result column="healing" property="healing"/>
    <result column="crit_rate" property="critRate"/>
    <result column="ailment_chance" property="ailmentChance"/>
    <result column="flinch_chance" property="flinchChance"/>
    <result column="stat_chance" property="statChance"/>
    <result column="category_internal_name" property="categoryInternalName"/>
    <result column="ailment_internal_name" property="ailmentInternalName"/>
  </resultMap>

  <sql id="moveColumnList">
    id,
    internal_name,
    name,
    type_internal_name,
    accuracy,
    effect_chance,
    pp,
    priority,

    power,
    damage_class_internal_name,
    target_internal_name,
    text,
    short_effect,
    effect,
    min_hits,
    max_turns,

    drain,
    healing,
    crit_rate,
    ailment_chance,
    flinch_chance,
    stat_chance,
    category_internal_name,
    ailment_internal_name
  </sql>

  <!--通过id查询单条招式数据-->
  <select id="selectById" resultMap="moveResultMap">
    select
    <include refid="moveColumnList"/>
    from move
    where id = #{id}
  </select>

  <!--新增招式-->
  <insert id="insert" keyProperty="id" useGeneratedKeys="true">
    insert into move
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="internalName != null and internalName != ''">
        internal_name,
      </if>
      <if test="name != null and name != ''">
        name,
      </if>
      <if test="typeInternalName != null and typeInternalName != ''">
        type_internal_name,
      </if>
      <if test="accuracy != null">
        accuracy,
      </if>
      <if test="effectChance != null">
        effect_chance,
      </if>
      <if test="pp != null">
        pp,
      </if>
      <if test="priority != null">
        priority,
      </if>
      <if test="power != null">
        power,
      </if>
      <if test="damageClassInternalName != null and damageClassInternalName != ''">
        damage_class_internal_name,
      </if>
      <if test="targetInternalName != null and targetInternalName != ''">
        target_internal_name,
      </if>
      <if test="text != null and text != ''">
        text,
      </if>
      <if test="shortEffect != null and shortEffect != ''">
        short_effect,
      </if>
      <if test="effect != null and effect != ''">
        effect,
      </if>
      <if test="minHits != null">
        min_hits,
      </if>
      <if test="maxTurns != null">
        max_turns,
      </if>
      <if test="drain != null">
        drain,
      </if>
      <if test="healing != null">
        healing,
      </if>
      <if test="critRate != null">
        crit_rate,
      </if>
      <if test="ailmentChance != null">
        ailment_chance,
      </if>
      <if test="flinchChance != null">
        flinch_chance,
      </if>
      <if test="statChance != null">
        stat_chance,
      </if>
      <if test="categoryInternalName != null and categoryInternalName != ''">
        category_internal_name,
      </if>
      <if test="ailmentInternalName != null and ailmentInternalName != ''">
        ailment_internal_name,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="internalName != null and internalName != ''">
        #{internalName},
      </if>
      <if test="name != null and name != ''">
        #{name},
      </if>
      <if test="typeInternalName != null and typeInternalName != ''">
        #{typeInternalName},
      </if>
      <if test="accuracy != null">
        #{accuracy},
      </if>
      <if test="effectChance != null">
        #{effectChance},
      </if>
      <if test="pp != null">
        #{pp},
      </if>
      <if test="priority != null">
        #{priority},
      </if>
      <if test="power != null">
        #{power},
      </if>
      <if test="damageClassInternalName != null and damageClassInternalName != ''">
        #{damageClassInternalName},
      </if>
      <if test="targetInternalName != null and targetInternalName != ''">
        #{targetInternalName},
      </if>
      <if test="text != null and text != ''">
        #{text},
      </if>
      <if test="shortEffect != null and shortEffect != ''">
        #{shortEffect},
      </if>
      <if test="effect != null and effect != ''">
        #{effect},
      </if>
      <if test="minHits != null">
        #{minHits},
      </if>
      <if test="maxTurns != null">
        #{maxTurns},
      </if>
      <if test="drain != null">
        #{drain},
      </if>
      <if test="healing != null">
        #{healing},
      </if>
      <if test="critRate != null">
        #{critRate},
      </if>
      <if test="ailmentChance != null">
        #{ailmentChance},
      </if>
      <if test="flinchChance != null">
        #{flinchChance},
      </if>
      <if test="statChance != null">
        #{statChance},
      </if>
      <if test="categoryInternalName != null and categoryInternalName != ''">
        #{categoryInternalName},
      </if>
      <if test="ailmentInternalName != null and ailmentInternalName != ''">
        #{ailmentInternalName},
      </if>
    </trim>
  </insert>

  <!--通过id修改招式-->
  <update id="updateById">
    update move
    <set>
      <if test="internalName != null and internalName != ''">
        internal_name = #{internalName},
      </if>
      <if test="name != null and name != ''">
        name = #{name},
      </if>
      <if test="typeInternalName != null and typeInternalName != ''">
        type_internal_name = #{typeInternalName},
      </if>
      <if test="accuracy != null">
        accuracy = #{accuracy},
      </if>
      <if test="effectChance != null">
        effect_chance = #{effectChance},
      </if>
      <if test="pp != null">
        pp = #{pp},
      </if>
      <if test="priority != null">
        priority = #{priority},
      </if>
      <if test="power != null">
        power = #{power},
      </if>
      <if test="damageClassInternalName != null and damageClassInternalName != ''">
        damage_class_internal_name = #{damageClassInternalName},
      </if>
      <if test="targetInternalName != null and targetInternalName != ''">
        target_internal_name = #{targetInternalName},
      </if>
      <if test="text != null and text != ''">
        text = #{text},
      </if>
      <if test="shortEffect != null and shortEffect != ''">
        short_effect = #{shortEffect},
      </if>
      <if test="effect != null and effect != ''">
        effect = #{effect},
      </if>
      <if test="minHits != null">
        min_hits = #{minHits},
      </if>
      <if test="maxTurns != null">
        max_turns = #{maxTurns},
      </if>
      <if test="drain != null">
        drain = #{drain},
      </if>
      <if test="healing != null">
        healing = #{healing},
      </if>
      <if test="critRate != null">
        crit_rate = #{critRate},
      </if>
      <if test="ailmentChance != null">
        ailment_chance = #{ailmentChance},
      </if>
      <if test="flinchChance != null">
        flinch_chance = #{flinchChance},
      </if>
      <if test="statChance != null">
        stat_chance = #{statChance},
      </if>
      <if test="categoryInternalName != null and categoryInternalName != ''">
        category_internal_name = #{categoryInternalName},
      </if>
      <if test="ailmentInternalName != null and ailmentInternalName != ''">
        ailment_internal_name = #{ailmentInternalName},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--通过id删除招式-->
  <delete id="deleteById">
    delete from move where id = #{id}
  </delete>
</mapper>

